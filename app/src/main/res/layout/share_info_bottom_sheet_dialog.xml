<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    style="?attr/bottomSheetStyle"
    android:id="@+id/reading_bottom_sheet">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="@dimen/primary_margin"
        android:paddingRight="@dimen/primary_margin"
        android:drawablePadding="@dimen/primary_margin"
        android:text="喜欢"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_favorite_24dp"
        android:tint="@color/colorPrimaryText"
        android:id="@+id/text_view_favorite"
        android:textColor="@color/colorPrimaryText"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/text_view_copy_link"
        android:paddingLeft="@dimen/primary_margin"
        android:paddingRight="@dimen/primary_margin"
        android:text="复制链接"
        android:drawableStart="@drawable/ic_insert_link_24dp"
        android:drawablePadding="@dimen/primary_margin"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryText"
        android:tint="@color/colorPrimaryText" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/text_view_open_with_browser"
        android:paddingLeft="@dimen/primary_margin"
        android:paddingRight="@dimen/primary_margin"
        android:text="在浏览器浏览"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryText"
        android:drawableStart="@drawable/ic_open_in_browser_24dp"
        android:drawablePadding="@dimen/primary_margin"
        android:tint="@color/colorPrimaryText" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/text_view_share"
        android:paddingLeft="@dimen/primary_margin"
        android:paddingRight="@dimen/primary_margin"
        android:text="分享"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryText"
        android:drawableStart="@drawable/ic_share_24dp"
        android:drawablePadding="@dimen/primary_margin"/>

</LinearLayout>